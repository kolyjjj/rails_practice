<%= form_for :product, url: products_path do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@product.errors.count, "error") %> 个错误:</h2>
            <ul>
                <% @product.errors.each_with_index do |msg, i| %>
                    <li><%= msg[1] %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :title, "名字" %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description, "描述" %><br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :image_url, "图片地址" %><br>
        <%= f.text_field :image_url %>
    </p>
    <p>
        <%= f.label :price, "价格" %><br>
        <%= f.text_field :price %>
    </p>
    <p>
        <%= f.label :tags, "标签" %><br>
        <%= f.text_field :tags %>
    </p>

    <p>
        <%= f.submit '提交' %>
    </p>

<% end %>