<div class="container">
    <h2><%= page_title %> </h2>
    <div class="create-button">
        <%= link_to t('.back'), products_path, class: 'btn btn-default col-md-offset-10' %>
    </div>
    <%= form_for @product, html: {class: 'form-horizontal'} do |f| %>
        <% if @product.errors.any? %>
            <div class="error col-sm-offset-2">
                <p><%= pluralize(@product.errors.count, t('.error_count_singular'), t('.error_count_plural')) %></p>
                <ul>
                    <% @product.errors.each_with_index do |msg, i| %>
                        <li><%= msg[1] %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-group">
            <%= f.label :title, t('.name'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-9">
                <%= f.text_field :title, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :description, t('.description'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-9">
                <%= f.text_area :description, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group file-upload">
            <%= f.label :image_url, t('.image_url'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-9">
                <%= f.file_field :image_url, class: 'filestyle' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :price, t('.price'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-9">
                <%= f.text_field :price, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :tags, t('.tags'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-9">
                <%= f.text_field :tags, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9">
                <%= f.submit t('.submit'), class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
    <% end %>
</div>