<h2><%= t('.page_title') %></h2>

<div class="row create-button">
    <%= link_to t('.create'), new_product_path, class: 'btn btn-default col-md-offset-10' %>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th><%= t('.number') %></th>
            <th><%= t('.name') %></th>
            <th><%= t('.image_url') %></th>
            <th><%= t('.description') %></th>
            <th><%= t('.price') %></th>
            <th><%= t('.operation') %></th>
        </tr>
        </thead>
        <tbody>
        <% @products.each_with_index do |product, index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= product.title %></td>
                <td><%= product.image_url %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= link_to t('.edit'), edit_product_path(product), class: 'btn btn-default btn-sm'
                    %>
                    <%= link_to t('.delete'), product_path(product), class: 'btn btn-default btn-sm',
                                method: :delete, data: {confirm: t('.confirm_message')} %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
